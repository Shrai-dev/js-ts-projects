{
  "compilerOptions": {
    "target": "es6",
    "rootDir": "./src",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "strict": true,
    "module": "es6",
    "allowJs": true,
    "checkJs": false,
    "outDir": "./dist",
    "esModuleInterop": true,
  },
  "include": [
    "./src",
  ],
  "exclude": [
    "node_modules",
  ]
}
